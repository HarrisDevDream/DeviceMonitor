<Window x:Class="DeviceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceMonitor"
        mc:Ignorable="d"
        Title="Device Monitor - Hardware Monitoring" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Window.Resources>
        <!-- ComboBox Style for Dark Theme -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <!-- ComboBoxItem Style for Dark Theme -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Device Monitor" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Real-time Hardware Monitoring" 
                               FontSize="12" 
                               Foreground="#FFAAAAAA" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="BtnViewLogs" 
                            Content="📋 View Logs" 
                            Click="BtnViewLogs_Click"
                            Width="100" 
                            Height="35"
                            Margin="0,0,10,0"
                            Background="#FF6C757D"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Open log folder"/>
                    
                    <Button Name="BtnRefresh" 
                            Content="🔄 Refresh" 
                            Click="BtnRefresh_Click"
                            Width="100" 
                            Height="35"
                            Margin="0,0,10,0"
                            Background="#FF007ACC"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    
                    <Button Name="BtnStartStop" 
                            Content="▶ Start" 
                            Click="BtnStartStop_Click"
                            Width="100" 
                            Height="35"
                            Background="#FF28A745"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filter Panel -->
            <Border Grid.Column="0" 
                    Background="#FF2D2D30" 
                    CornerRadius="5" 
                    Padding="10"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Filter by Type" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,10"/>
                    
                    <RadioButton Name="RadioAll" 
                                 Content="All Sensors" 
                                 Foreground="White" 
                                 IsChecked="True"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>
                    
                    <RadioButton Name="RadioTemp" 
                                 Content="🌡️ Temperature" 
                                 Foreground="White"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>
                    
                    <RadioButton Name="RadioFan" 
                                 Content="🌀 Fan Speed" 
                                 Foreground="White"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>
                    
                    <RadioButton Name="RadioLoad" 
                                 Content="📊 Load" 
                                 Foreground="White"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>
                    
                    <RadioButton Name="RadioPower" 
                                 Content="⚡ Power" 
                                 Foreground="White"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>

                    <RadioButton Name="RadioClock" 
                                 Content="⏱️ Clock" 
                                 Foreground="White"
                                 Checked="FilterChanged"
                                 Margin="0,5"/>
                    
                    <Separator Background="#FF444444" Margin="0,15,0,10"/>
                    
                    <TextBlock Text="Update Interval" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,10"/>
                    
                    <ComboBox Name="IntervalComboBox" 
                              SelectedIndex="1"
                              SelectionChanged="IntervalComboBox_SelectionChanged"
                              Style="{StaticResource DarkComboBoxStyle}">
                        <ComboBoxItem Content="⚡ Fast (1 sec)" Style="{StaticResource DarkComboBoxItemStyle}"/>
                        <ComboBoxItem Content="✓ Normal (2 sec)" Style="{StaticResource DarkComboBoxItemStyle}"/>
                        <ComboBoxItem Content="🔋 Eco (5 sec)" Style="{StaticResource DarkComboBoxItemStyle}"/>
                        <ComboBoxItem Content="💤 Slow (10 sec)" Style="{StaticResource DarkComboBoxItemStyle}"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Data Display -->
            <Border Grid.Column="1" 
                    Background="#FF2D2D30" 
                    CornerRadius="5">
                <Grid>
                    <ListView Name="SensorListView" 
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="White"
                              Padding="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Hardware" 
                                                Width="200" 
                                                DisplayMemberBinding="{Binding HardwareName}"/>
                                <GridViewColumn Header="Sensor" 
                                                Width="250" 
                                                DisplayMemberBinding="{Binding SensorName}"/>
                                <GridViewColumn Header="Type" 
                                                Width="120" 
                                                DisplayMemberBinding="{Binding SensorType}"/>
                                <GridViewColumn Header="Value" 
                                                Width="150" 
                                                DisplayMemberBinding="{Binding DisplayValue}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- No Data Message -->
                    <TextBlock Name="NoDataText"
                               Text="Click 'Start' to begin monitoring hardware sensors"
                               FontSize="16"
                               Foreground="#FFAAAAAA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Visible"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#FF2D2D30" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Name="StatusText" 
                           Text="Status: Ready" 
                           Foreground="#FFAAAAAA"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Name="LogPathText"
                           Foreground="#FF888888"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"
                           MouseDown="LogPathText_MouseDown"
                           Cursor="Hand"
                           ToolTip="Click to open log folder">
                    <Run Text="📁 Log: "/>
                    <Run Text="Click to view" TextDecorations="Underline"/>
                </TextBlock>
                
                <TextBlock Grid.Column="2" 
                           Name="SensorCountText"
                           Text="Sensors: 0" 
                           Foreground="#FFAAAAAA"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
